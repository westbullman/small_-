<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="logistic_company_tree" model="ir.ui.view">
        <field name="name">logistic.company.tree</field>
        <field name="model">logistic.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="short_name"/>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="logistic_company_form" model="ir.ui.view">
        <field name="name">logistic.company.form</field>
        <field name="model">logistic.company</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="short_name" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_logistic_company" model="ir.actions.act_window">
        <field name="name">物流公司</field>
        <field name="res_model">logistic.company</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
