<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dealer_record_tree" model="ir.ui.view">
        <field name="name">dealer.record.tree</field>
        <field name="model">dealer.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" string="序号"/>
                <field name="name" />
                <field name="vat" />
            </tree>
        </field>
    </record>

    <record id="dealer_record_form" model="ir.ui.view">
        <field name="name">dealer.record.form</field>
        <field name="model">dealer.record</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="name" />
                        <label for="street" string="地址"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="街道..." class="o_address_street" />
                                <field name="street2" placeholder="门牌号..." class="o_address_street" />
                                <field name="city" placeholder="城市" class="o_address_city" />
                                <field name="state_id" class="o_address_state" placeholder="省/直辖市" options="{&quot;no_open&quot;: True}" />
                                <field name="country_id" placeholder="国家" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                            </div>
                    </group>
                    <group>
                        <field name="vat" />
                        <field name="mobile" />
                        <field name="business_license_image"  widget="image" options='{"size": [200, 250]}'/>
                        <field name="qr_code"  widget="image" options='{"size": [200, 200]}'/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_dealer_record" model="ir.actions.act_window">
        <field name="name">Dealer Record</field>
        <field name="res_model">dealer.record</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="经销商"
        id="Dealer_record_menu"
        action="action_dealer_record"
        sequence="2"/>

</odoo>
